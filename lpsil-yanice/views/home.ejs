</ul>
            </p>
          </form>
    </div>
  </div>
</div>
</header>

  <p id="userName"></p>
  <script>
    if(document.cookie){
      var s= document.getElementById("userName");
    	s.value = document.cookie.replace(/name=|;|id=|/g,'');
    }
    </script>

  	<table class="w3-table w3-striped">
  		<tr>
  			<td>
  <% listeProduit.forEach(function(produit){ %>

			    <table class="w3-table">
				    <tr>
				    	<td colspan="2" style="text-align: center;"><strong><%= produit.nomProduit%></strong></td>
					</tr>
			    	<tr>
			    		<td> Description du produit </td>
						<td> <%= produit.descriptionProduit %></td>
					</tr>
			    	<tr>
			    		<td> Prix du produit </td>
						<td> <%= produit.prixProduit %> €</td>
					</tr>
